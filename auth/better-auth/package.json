    "@mastra/core": "workspace:*",
    "@types/node": "22.19.7",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "eslint": "^9.37.0",
    "hono": "^4.11.10",
    "tsup": "^8.5.1",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "homepage": "https://mastra.ai",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mastra-ai/mastra.git",
    "directory": "auth/better-auth"
  },
  "bugs": {
    "url": "https://github.com/mastra-ai/mastra/issues"
